#:schema https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json
version = 2
final_space = true
console_title_template = '{{ .UserName }}@{{ .HostName }}'

[[blocks]]
  type = 'prompt'
  alignment = 'left'
  newline = true

  [[blocks.segments]]
    type = 'os'
    style = 'diamond'
    foreground = 'p:white'
    background_templates = ['{{if gt .Code 0}}p:err{{end}}', '{{if eq .Code 0}}p:main{{end}}']
    leading_diamond = ''
    trailing_diamond = ''
    template = ' {{ .Icon }}  '
# template = '{{ if .SSHSession }}   {{ .UserName }} {{else}} {{ .Segments.OS.Icon }} {{ end }}'

  [[blocks.segments]]
    type = 'python'
    style = 'powerline'
    powerline_symbol = ''
    foreground = 'p:white'
    background = 'p:darkgray'
    template = '{{if .Venv }} ({{ .Venv }}) {{ end }}'
    [blocks.segments.properties]
      display_mode = 'environment'
      fetch_virtual_env = true
      home_enabled = true
    

  [[blocks.segments]]
    type = 'path'
    style = 'powerline'
    powerline_symbol = ''
    foreground = 'p:black'
    background_templates = ['{{if gt .Code 0}}p:err_sec{{end}}', '{{if eq .Code 0}}p:sec{{end}}']
    template = '  {{ path .Path .Location }} '

    [blocks.segments.properties]
      style = 'folder'

[[blocks]]
  type = 'rprompt'
  overflow = 'hidden'

  [[blocks.segments]]
    type = 'executiontime'
    style = 'plain'
    foreground = 'p:white'
    background = 'transparent'
    template = '{{ .FormattedMs }}'

    [blocks.segments.properties]
      threshold = 5000

  [[blocks.segments]]
    type = 'git'
    style = 'plain'
    foreground = 'p:white'
    background = 'transparent'
    template = '  {{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }} '
    [blocks.segments.properties]
      branch_icon = ''
      branch_max_length = 25
      fetch_status = true

[transient_prompt]
# foreground = 'p:sec'
  background = 'transparent'
  foreground_templates = ['{{if gt .Code 0}}p:err_sec{{end}}', '{{if eq .Code 0}}p:sec{{end}}']
  template = ' ❯ '

[secondary_prompt]
  foreground = 'p:sec'
  background = 'transparent'
  template = '  ❯ '

[palette]
  main = '#9342ae'
  sec = '#4ad94a'
  err = '#D81E5B'
  err_sec = '#f6993c'
  darkgray = '#505050'  

  black = '#262B44'
  white = '#E0DEF4'
